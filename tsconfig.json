{
    "compilerOptions": {
        "target": "es5",
        "outDir": "build",
        "allowJs": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "downlevelIteration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "watch": true,
        "skipLibCheck": true,
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ],
        "rootDirs": [
            "./src",
            "./test"
        ],
        "baseUrl": "./src"
    },
    "exclude": [
        "node_modules",
        "bower_components",
        "vendor"
    ]
}